# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{*.rb,*.haml,*.decorator,*.yml,*.yaml,*.jbuilder}]
indent_size = 2
indent_style = space

[{*.js,*.jst,*.ejs,*.scss}]
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false
